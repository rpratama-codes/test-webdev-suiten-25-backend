datasource db {
  provider = "postgresql"
}

generator client {
  // Prisma New Generator
  provider               = "prisma-client"
  output                 = "generated"
  engineType             = "client"
  moduleFormat           = "esm"
  importFileExtension    = "js"
  generatedFileExtension = "ts"
}

enum UserRoles {
  system_user
  user
}

model Users {
  id                String    @id @default(uuid(7))
  first_name        String?
  last_name         String?
  email             String    @unique @db.Citext
  username          String    @unique @db.Citext
  // just for note, 
  // password can be null because passwordless feature
  verified          Boolean   @default(false)
  password          String?
  image             String?
  role              UserRoles
  google_account_id String?

  created_at           DateTime               @default(now())
  updated_at           DateTime               @updatedAt
  savedRecommendations SavedRecommendations[]
  oneTimeTokenSecrets  OneTimeTokenSecrets[]

  @@index(google_account_id)
  @@map("user")
}

model Categories {
  id            String      @id @default(uuid(7))
  category_name String?
  item          Items[]
  Criteria      Criterias[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("categories")
}

model Items {
  id          String  @id @default(uuid(7))
  category_id String?
  item_name   String?
  soc         Float?
  ram         Float?
  rom         Float?
  camera      Float?
  screen      Float?
  nfc         Float?
  network     Float?
  battery     Float?
  price       Float?
  weight      Float?
  picture     String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  category Categories? @relation(fields: [category_id], references: [id], onDelete: SetNull)

  @@map("items")
}

model Criterias {
  id            String  @id @default(uuid(7))
  category_id   String?
  criteria_name String
  soc           Float   @default(0)
  ram           Float   @default(0)
  rom           Float   @default(0)
  camera        Float   @default(0)
  screen        Float   @default(0)
  nfc           Float   @default(0)
  network       Float   @default(0)
  battery       Float   @default(0)
  price         Float   @default(0)
  weight        Float   @default(0)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  category Categories? @relation(fields: [category_id], references: [id], onDelete: SetNull)

  @@map("criterias")
}

// 
